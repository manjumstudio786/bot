# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_secure_password
DB_NAME=whatsapp_bot_pro
DB_PORT=3306

# JWT Secret (CHANGE THIS IN PRODUCTION - MINIMUM 32 CHARACTERS)
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters_change_this_in_production

# Server Configuration
PORT=3000
NODE_ENV=production

# Security Settings
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Security
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Session Security
SESSION_SECRET=your_session_secret_key_minimum_32_characters
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Admin Configuration
ADMIN_WHATSAPP=923170973410

# Encryption Keys (Generate new ones for production)
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT_ROUNDS=12

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY

# Logging
LOG_LEVEL=info
LOG_FILE=logs/security.log